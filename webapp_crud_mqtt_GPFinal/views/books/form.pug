extends ../base.pug

block content
  h3 #{action} book
  form(method="POST", enctype="multipart/form-data")
    .form-group
      label(for="title") Verbal Command
      input.form-control(type="text", name="title", id="title", value=book.title)

    .form-group
      label(for="led") Device
      h6 Alfred
      input.form-control(type="radio", name="device", id="device", value='alfred')
      h6 Charizard
      input.form-control(type="radio", name="device", id="device", value='charizard')
      h6 Gloria
      input.form-control(type="radio", name="device", id="device", value='gloria')
      h3 Alfred
    .form-group
      label(for="led") Led
      input.form-control(type="text", name="led", id="led", value=book.led)





















      h3 Charizard
    .form-group
      label(for="insidePropane") Inside Propane
      input.form-control(type="range", min='0', max='9', onchange='test()', name="insidePropane", id="insidePropane", value=book.insidePropane)

    .form-group
      label(for="insideOxygen") Inside Oxygen
      input.form-control(type="range", min='0', max='99', onchange='number()', name="insideOxygen", id="insideOxygen", value=book.insideOxygen)

    .form-group
      label(for="outsidePropane") Outside Propane
      input.form-control(type="range", min='0', max='99', name="outsidePropane", id="outsidePropane", value=book.outsidePropane)

    .form-group
      label(for="outsideOxygen") Outside Oxygen
      input.form-control(type="range", min='0', max='99', name="outsideOxygen", id="outsideOxygen", value=book.outsideOxygen)

















      h3 Gloria
    .form-group
      label(for="leftDoorPosition") Left Door Position
      input.form-control(type="range", name="leftDoorPosition", id="leftDoorPosition", value=book.leftDoorPosition)
    .form-group
      label(for="rightDoorPosition") Right Door Position
      input.form-control(type="range", name="rightDoorPosition", id="rightDoorPosition", value=book.rightDoorPosition)
      h3 Extras
    .form-group
      label(for="author") Author
      input.form-control(type="text", name="author", id="author", value=book.author)
    .form-group
      label(for="publishedDate") Date Published
      input.form-control(type="text", name="publishedDate", id="publishedDate", value=book.publishedDate)
    .form-group
      label(for="description") Description
      input.form-control(type="text", name="description", id="description", value=book.description)
    .form-group
      label(for="image") Cover Image
      input.form-control(type="file", name="image", id="image")
    .form-group.hidden
      label(for="imageUrl") Cover Image URL
      input.form-control(type="text", name="imageUrl", id="imageUrl", value=book.imageUrl)
    .form-group.hidden
      label(for="createdBy") Created by
      input.form-control(type="text", name="createdBy", id="createdBy", value=book.createdBy)
    .form-group.hidden
      label(for="createdById") Created by ID
      input.form-control(type="text", name="createdById", id="createdById", value=book.createdById)
    button.btn.btn-success(type="submit") Save

    script(type='text/javascript' src='../functions.js')
    script(type='text/javascript' src='../pubsub.js')
